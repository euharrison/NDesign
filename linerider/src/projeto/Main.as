package projeto{	import com.greensock.events.LoaderEvent;	import com.greensock.loading.LoaderMax;	import com.greensock.loading.VideoLoader;	import com.greensock.loading.XMLLoader;	import com.senocular.display.Layout;	import projeto.game.ui.personagens.Personagem;    import flash.display.DisplayObject;    import flash.display.MovieClip;    import flash.display.Sprite;	import flash.events.Event;    import flash.events.MouseEvent;import projeto.game.core.UserInfo;    import projeto.gui.Background;    import projeto.gui.Footer;    import projeto.gui.Header;    import projeto.navigation.NavigationPages;    import seisd.display.Global;	import seisd.display.MovieClipBase;    import seisd.navigation.Navigation;    public class Main extends Global	{        public static var main:Main;		public var layerBackground:Sprite;		public var layerPages:Sprite;        public var layerFooter:Sprite;        public var layerHeader:Sprite;		public var layerCursor:Sprite;		public var xmlConfig:XML;		public var navPages:Navigation;        public static var userInfo:UserInfo;        public static var personagem:Personagem;		public function Main()		{            main = this;			if (stage) loadConfig();			else addEventListener(Event.ADDED_TO_STAGE, loadConfig);		}		private function loadConfig(e:Event = null):void		{			new XMLLoader('xml/config.xml', { onComplete:init } ).load();		}		private function init(e:Event = null):void		{            userInfo = new UserInfo();			xmlConfig = LoaderMax.getContent('xml/config.xml');			stageConfig();			initLayers();			initNavigation();            initBackground();            initFooter();            initHeader();		}        private function initBackground():void        {            layerBackground.addChild(new Background())        }        private function initFooter():void        {            layerFooter.addChild(new Footer())        }        private function initHeader():void        {            layerHeader.addChild(new Header())        }		private function initLayers():void		{			layerBackground = new Sprite();			layerPages = new Sprite();			layerHeader = new Sprite();			layerFooter = new Sprite();			layerCursor = new Sprite();			addChild(layerBackground);			addChild(layerPages);			addChild(layerHeader);			addChild(layerFooter);			addChild(layerCursor);		}		private function initNavigation():void		{			navPages = new NavigationPages(xmlConfig, layerPages, { } );			//navPages.verbose = true;			navPages.activateFirst();			//navPages.activate('crieseupersonagem');		}					}}